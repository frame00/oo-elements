{
  "defaultSeverity": "error",
  "extends": [
    "tslint-xo",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "semicolon": [true, "never"],
    "prettier": [true,
      {
        "semi": false,
        "singleQuote": true,
        "useTabs": true
      }
    ]
  }
}
